<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_dialog_corners">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="123dp"
                android:layout_height="116dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:scaleType="fitStart"
                android:clipToOutline="true"
                android:background="@drawable/rounded_shape_20"
                android:src="@drawable/profile_istj" />
            <TextView
                android:id="@+id/tv_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISTJ"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_short_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세상의 소금형"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_long_desc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="열정적으로 새로운 관계를 만드는 사람들입니다. test test"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shape_10"
                android:padding="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_compability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mbti_compatibility"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shape_10"
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tv_best"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/best_compatibility_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>

                <HorizontalScrollView
                    android:id="@+id/ly_best_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ly_best"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/compatibility_good_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:id="@+id/ly_good_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ly_good"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_bad"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/compatibility_bad_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:id="@+id/ly_bad_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ly_bad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_dialog_button"
                android:backgroundTint="@color/gray"
                android:text="닫기"
                android:textColor="@color/white" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>